{
	"compilerOptions": {
		"paths": {
			"@/*": ["./src/*"]
		},
		"target": "ESNext",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"removeComments": true,
		"emitBOM": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	}
}
